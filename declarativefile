pipeline {
    agent {label 'JENKINS'}
    environment {
        MAVEN_HOME = tool 'Maven'
        SSH_CREDENTIALS = credentials('adnan')
        REMOTE_HOST = 'remote-host'
        REMOTE_DIRECTORY = '/opt/spring-petclinic'
    }
    stages {
        stage('Build') {
            steps {
                sh "${MAVEN_HOME}/bin/mvn clean package"
            }
        }
        stage('Deploy') {
            steps {
                sshagent(['SSH_CREDENTIALS']) {
                    sshCommand remote: "${REMOTE_HOST}", user: 'ubuntu', command: "mkdir -p ${REMOTE_DIRECTORY}"
                    sshCommand remote: "${REMOTE_HOST}", user: 'ubuntu', command: "scp target/*.jar ubuntu@${REMOTE_HOST}:${REMOTE_DIRECTORY}"
                }
            }
        }
    }
}
