pipeline {
    agent any

    environment {
         GRADLE_HOME/bin:$(PATH)
         GRADLE_VERSION = '7.4.2'
    }

    stages {
        stage('Checkout') {
            steps {
                sh './gradle build'
            }
        }

        stage('Build') {
            steps {
                // Use the Gradle executable to build the project
                sh "${env.GRADLE_HOME}/bin/gradle wrapper"
                sh "./gradlew build"
            }
        }
    }
}
}
