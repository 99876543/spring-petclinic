node('scripted') {
    stage('version control') {
      git url: 'https://github.com/99876543/spring-petclinic.git',
        branch: 'gradleFile'    
    }
}  
       environment {
        GRADLE_HOME = '/opt/gradle'
    }

    stages {
        stage('Build') {
            steps {
                withEnv(["PATH+GRADLE=$GRADLE_HOME/bin"]) {
                    sh './gradlew build'
                }
            }
        }
    }
}
