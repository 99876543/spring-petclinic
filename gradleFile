node('scripted') {
    stage('version control') {
      git url: 'https://github.com/99876543/spring-petclinic.git',
        branch: 'gradleFile'    
    }
}
    
    // Set up the Gradle environment
    stage('Set up Gradle') {
        def gradleVersion = '8.0.2'
        def gradleHome = "/opt/gradle/gradle-${gradleVersion}"
        def gradleCommand = "./gradlew"
     } 
  
        env.GRADLE_HOME = gradleHome
        env.PATH = "${gradleHome}/bin:${env.PATH}
    stage('build') {
      sh 'gradle'
    }
}
