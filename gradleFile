pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                step([$class: 'GitSCM', 
                      branches: [[name: '*/gradleFile']], 
                      doGenerateSubmoduleConfigurations: false, 
                      extensions: [], 
                      submoduleCfg: [], 
                      userRemoteConfigs: [[url: 'https://github.com/spring-projects/spring-petclinic.git',]]])
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
    }
}
}
